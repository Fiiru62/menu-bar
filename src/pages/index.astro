---
import "../styles/global.css";

/* declara las variables para que funcionen con TS. Cada vez que quiera agregar una variable en el excel, lo tengo que comunicar respetando Mayúsculas, etc. */
interface Producto {
  Nombre: string;
  Precio: string;
  Descripcion: string
}

/* Llama a la API de Google Sheets con la URL y mi ID */
const response = await fetch(
	"https://opensheet.elk.sh/1_SSfYwNJDOvZRSmffLR_-043_i_GUiS7LGHzwVA7Jgc/1"
)
const data: Producto[] = await response.json(); // Tipamos la respuesta

