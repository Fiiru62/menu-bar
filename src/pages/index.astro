---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Menú bar</title>
	</head>
	<script src="/scripts/sheets.js" defer></script>
	<body class="bg-white">
		
		<!-- fondo en diagonal -->
		<div class="relative bg-[#9BAF9E] h-100 clip-diagonal w-full max-w-screen overflow-hidden">
			<div class="relative m-0 p-18">
				<!-- titulo principal -->
				<h1 class="text-center text-xl text-white font-bold">MENÚ ANTÓN BAR</h1>
				<!-- texto de abajo -->
				<div class="flex flex-col items-center space-y-1 m-6">
					<p class="text-center p-0 text-xs text-white">MIÉRCOLES A DOMINGOS DESDE 18.30 HS</p>
					<p class="text-center p-0 text-xs text-white">TEL 3329-610986</p>
				</div>
			</div>
			<h1 class="text-white text-center pt-10 text-xl font-bold"></h1>
		</div>
		
		<!-- cards -->
		<div class="flex flex-col items-center space-y-6 p-6 card1">
			<!-- primera card -->
			<div class="relative w-[80%] sm:w-[80%] md:max-w-lg mx-auto -mt-56 bg-white shadow-[0px_8px_20px_rgba(0,0,0,0.2)] rounded-lg p-6 h-140">
				<h2 class="text-xl font-bold text-center text-[#9B3D12] mt-4">NUESTRO MANIFIESTO DE AUTOR</h2>
